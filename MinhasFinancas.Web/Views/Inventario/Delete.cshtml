@model MinhasFinancas.Web.ViewModels.InventarioViewModel

@{
    ViewBag.Title = "Excluir Inventário";
}

<h2>Excluir Inventário</h2>

<div>
    <h4>Tem certeza que deseja excluir este item?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Ativo)</dt>
        <dd>@Html.DisplayFor(model => model.Ativo.Nome)</dd>

        <dt>@Html.DisplayNameFor(model => model.Valor)</dt>
        <dd>@Html.DisplayFor(model => model.Valor)</dd>

        <dt>@Html.DisplayNameFor(model => model.Data)</dt>
        <dd>@Html.DisplayFor(model => model.Data)</dd>

        <dt>@Html.DisplayNameFor(model => model.Descricao)</dt>
        <dd>@Html.DisplayFor(model => model.Descricao)</dd>

        <dt>@Html.DisplayNameFor(model => model.StatusAtivo)</dt>
        <dd>@Html.DisplayFor(model => model.StatusAtivo)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger" />
            @Html.ActionLink("Voltar", "Index", new { area = "" }, new { @class = "btn btn-info" })
        </div>
    }
</div>
